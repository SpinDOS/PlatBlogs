@inject SignInManager<ApplicationUser> SignInManager
@{
    Layout = null;
}
<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        @if (SignInManager.IsSignedIn(User))
        {
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/User/@User.Identity.Name" class="navbar-brand">@@@User.Identity.Name</a>
                <a href="/News" class="navbar-brand">News</a>
                <a href="/Popular" class="navbar-brand">Popular</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <form method="get" action="/Search" id="search-form">
                            <input type="text" name="q" maxlength="50" class="navbar-input-search">
                        </form>
                    </li>
                    <li>
                        <a asp-page="/Account/Manage" title="Settings">Settings</a>
                    </li>
                    <li>
                        <a asp-page="/NewPost" title="New post" class="navbar-newpost">New post</a>
                    </li>
                </ul>
            </div>

        }
        else
        {
            <a asp-page="/Index" class="navbar-brand float-left" style="float: left;">PlatBlogs</a>
            <a asp-page="/Account/Login" class="navbar-brand navbar-right-link">Log in</a>
            <a asp-page="/Account/Register" class="navbar-brand navbar-right-link">Register</a>
        }
    </div>
</nav>