@model _Partials.PostView
@{
    var hrefToAuthor = "/user/" + Model.Post.Author.UserName;

}

<div class="post">
    <div class="post-date">@Model.Post.DateTime.ToString("dd.MM.yyyy HH:mm")</div>
    <a href="@hrefToAuthor" class="post-author-name name">@Model.Post.Author.FullName</a>
    <a href="@hrefToAuthor" class="post-author-nickname nickname">@@@Model.Post.Author.UserName</a><br/>
    @Model.Post.Message
    <form method="post" asp-controller="Api" asp-action="@(Model.Liked? "Unlike" : "Like")" class="post-like-form">
        <input type="hidden" asp-for="Post.AuthorId"/>
        <input type="hidden" asp-for="Post.Id"/>
        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl"/>
        <button type="submit" class="post-like-button @(Model.Liked? "liked-img" : "not-liked-img")">@Model.LikesCount</button>
    </form>
</div>