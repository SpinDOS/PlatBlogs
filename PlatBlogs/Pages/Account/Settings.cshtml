@page
@model SettingsModel
@{
    ViewData["Title"] = "Settings";
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-9">
        @if (success != null)
    {
        <div class="text-success">@success</div>
}
        @if (error != null)
    {
        <div class="text-danger">@error</div>
}
        <form method="post" enctype="multipart/form-data">
            <h4>Manage your settings</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Nickname"></label>
                <input asp-for="Input.Nickname" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Surname"></label>
                <input asp-for="Input.Surname" class="form-control" />
                <span asp-validation-for="Input.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.DateOfBirth"></label>
                <input asp-for="Input.DateOfBirth" class="form-control" />
                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.City"></label>
                <input asp-for="Input.City" class="form-control" />
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Avatar"></label>
                <input asp-for="Input.Avatar" accept="image/png, image/jpeg" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Info"></label>
                <input asp-for="Input.Info" class="form-control" />
                <span asp-validation-for="Input.Info" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.PublicProfile" checked="checked" /> &nbsp;
                <label asp-for="Input.PublicProfile"></label>
            </div>
            <button type="submit" class="btn btn-default">Save</button>
        </form>

        <hr />

        <form method="post" asp-controller="Account" asp-action="ChangePassword">
            <h2>Change password</h2>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PasswordChange.OldPassword"></label>
                <input asp-for="PasswordChange.OldPassword" class="form-control" />
                <span asp-validation-for="PasswordChange.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordChange.Password"></label>
                <input asp-for="PasswordChange.Password" class="form-control" />
                <span asp-validation-for="PasswordChange.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordChange.ConfirmPassword"></label>
                <input asp-for="PasswordChange.ConfirmPassword" class="form-control" />
                <span asp-validation-for="PasswordChange.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Change password</button>
        </form>

        <hr />

        <form method="post" asp-controller="Account" asp-action="Logout" class="quit-form">
            <button type="submit" class="btn btn-default">Log out</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
