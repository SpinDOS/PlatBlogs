@page
@model PlatBlogs.Pages.NewPostModel
@{
    Layout = "~/Views/_Layout.cshtml";
    ViewData["Title"] = "New post";
}

<h2>New post</h2>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <textarea asp-for="Input.Text" class="form-control" rows="7" cols="40"></textarea>
    </div>
    <input type="submit" value="Post" class="platblogs-button"/>
</form>