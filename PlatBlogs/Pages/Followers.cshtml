@page "{username}"
@model PlatBlogs.Pages.FollowersModel

@if (Model.AjaxResult)
{
    Layout = null;
    @await Html.PartialAsync("~/Views/_Partials/UserListWithLoadMore.cshtml", Model.UsersModel)
    return;
}

@{
    ViewData["Title"] = $"{Model.InspectedUser.UserName}'s followers";
    ViewData["User"] = Model.InspectedUser;
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>@($"{Model.InspectedUser.FullName}'s followers")</h2>

@await Html.PartialAsync("~/Views/_Partials/UserListWithLoadMore.cshtml", Model.UsersModel)

